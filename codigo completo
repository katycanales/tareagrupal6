public class Persona {
    private String nombre;
    private int edad;

    public Persona(String nombre, int edad) {
        this.nombre = nombre;
        this.edad = edad;
    }

    public void establecerNombre(String nombre) {
        this.nombre = nombre;
    }

    public String obtenerNombre() {
        return this.nombre;
    }

    public void establecerEdad(int edad) {
        this.edad = edad;
    }

    public int obtenerEdad() {
        return this.edad;
    }
}

public class Deportista extends Persona {
    private String deporte;

    public Deportista(String nombre, int edad, String deporte) {
        super(nombre, edad);
        this.deporte = deporte;
    }

    public void establecerDeporte(String deporte) {
        this.deporte = deporte;
    }

    public String obtenerDeporte() {
        return this.deporte;
    }
}

public class Doctor extends Persona {
    private String especialidad;

    public Doctor(String nombre, int edad, String especialidad) {
        super(nombre, edad);
        this.especialidad = especialidad;
    }

    public void establecerEspecialidad(String especialidad) {
        this.especialidad = especialidad;
    }

    public String obtenerEspecialidad() {
        return this.especialidad;
    }
}

public class Main {
    public static void main(String[] args) {
        Deportista deportista1 = new Deportista("Juan", 25, "Fútbol");
        System.out.println("Nombre deportista: " + deportista1.obtenerNombre());
        System.out.println("Edad deportista: " + deportista1.obtenerEdad());
        System.out.println("Deporte: " + deportista1.obtenerDeporte());

        Doctor doctor1 = new Doctor("María", 35, "Pediatría");
        System.out.println("\nNombre doctor: " + doctor1.obtenerNombre());
        System.out.println("Edad doctor: " + doctor1.obtenerEdad());
        System.out.println("Especialidad: " + doctor1.obtenerEspecialidad());
    }
}
